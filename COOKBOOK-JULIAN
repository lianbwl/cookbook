$(window).scroll(function (event) {
    var pos = $(window).scrollTop();
    console.log(pos);

    if(pos >= 300){
      $( "header" ).css( "position", "fixed" );
    }
    else{
      $( "header" ).css( "position", "relative" );
    }
});


